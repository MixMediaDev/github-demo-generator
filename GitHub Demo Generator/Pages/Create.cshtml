@page
@model GitHub_Demo_Generator.Pages.CreateModel
@{
}
<div class="row">
    <div class="col-sm-8">
        <form asp-antiforgery="true">
            <div class="mb-3 row">
                <label for="staticEmail" class="col-sm-2 col-form-label">Selected Template:</label>
                <div class="col-sm-6">
                    <input type="text" readonly class="form-control-plaintext" id="staticEmail" value="email@example.com">
                </div>
                <button type="button" class="btn btn-primary col-sm-4" data-bs-toggle="modal" data-bs-target="#selectTemplate">
                    Choose Template
                </button>
            </div>
            <div class="mb-3 row">
                <label for="inputPassword" class="col-sm-2 col-form-label">New Project Name:</label>
                <div class="col-sm-10">
                    <input type="password" class="form-control" id="inputPassword">
                </div>
            </div>
            <div class="mb-3 row">
                <label for="targetSelection" class="col-sm-2 col-form-label">Select Organization:</label>
                <div class="col-sm-10">
                    <select id="targetSelection" class="form-select">
                        <option selected>Choose the target for your Demo</option>
                        @foreach (var item in Model.Targets)
                        {
                            <option value="@item">@item</option>
                        })
                    </select>
                </div>
            </div>

            <button type="button" class="btn btn-primary col-sm-4" data-bs-toggle="modal" data-bs-target="#selectTemplate">
                Create Project
            </button>
        </form>
    </div>

    <div class="col-sm-4">


        <div class="card text-bg-dark mb-3" style="max-width: 18rem;">
            <div class="card-header">About this Template</div>
            <div class="card-body">
                <h5 class="card-title">Dark card title</h5>
                <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
            </div>
        </div>

        <div class="card text-bg-dark mb-3" style="max-width: 18rem;">
            <div class="card-header">What's new?'</div>
            <div class="card-body">
                <h5 class="card-title">Dark card title</h5>
                <p class="card-text">
                    <ul>
                        <li></li>
                    </ul>
                </p>
            </div>
        </div>
    </div>

</div>


<!-- Project Template Selection Modal -->
<div class="modal fade" id="selectTemplate" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="exampleModalLabel">Modal title</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                ...
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Save changes</button>
            </div>
        </div>
    </div>
</div>